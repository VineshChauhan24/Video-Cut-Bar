<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/llCutValue"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="#000"
            tools:text="Min: 0"
            android:id="@+id/tvMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginEnd="8dp"
            android:textSize="14sp"
            android:textColor="#000"
            tools:text="Max: 0"
            android:id="@+id/tvMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        tools:text="Status"
        app:layout_constraintTop_toBottomOf="@id/llCutValue"
        app:layout_constraintBottom_toTopOf="@id/videoCutBar"
        android:textSize="16sp"
        android:textColor="#f00"
        android:layout_marginTop="8dp"
        android:id="@+id/tvStatus"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <com.luza.videocutbar.VideoCutBar
        android:id="@+id/videoCutBar"
        android:background="#000"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:vcb_video_bar_height="60dp"
        app:vcb_number_image_preview="200"
        app:vcb_show_temp_image="false"
        app:vcb_video_bar_border="2dp"
        app:vcb_video_bar_border_color="#4fff"

        app:vcb_show_thumb_cut="true"
        app:vcb_thumb_width="12dp"
        app:vcb_thumb_touch_extra_area="10dp"
        app:vcb_thumb_cut_min_progress="2000"
        app:vcb_thumb_left="@drawable/ic_thumb_left"
        app:vcb_thumb_right="@drawable/ic_thumb_right"
        app:vcb_thumb_overlay_tail_color="#8888"

        app:vcb_progress_thumb_color="#5fff"
        app:vcb_progress_thumb_corners="1dp"
        app:vcb_progress_thumb_height="72dp"
        app:vcb_progress_thumb_width="2dp"
        app:vcb_show_thumb_progress="true"

        app:vcb_indicator_size="6dp"
        app:vcb_indicator_corners="3dp"
        app:vcb_indicator_color="#fff"
        app:vcb_indicator_padding_bottom="4dp"

        app:vcb_indicator_text_size="14sp"
        app:vcb_indicator_text_color="#fff"
        app:vcb_indicator_text_padding_bottom="4dp"

        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/videoCutBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:onClick="onClick"
            android:textAllCaps="false"
            android:text="@string/choose_video"
            android:id="@+id/btnChooseAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <EditText
                        android:hint="@string/min"
                        android:id="@+id/edtMin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        tools:ignore="Autofill" />
                    <EditText
                        android:hint="@string/max"
                        android:id="@+id/edtMax"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="number"
                        tools:ignore="Autofill" />
                    <Button
                        android:onClick="onClick"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        android:text="@string/set_range"
                        android:id="@+id/btnRange"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:ignore="SmallSp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <EditText
                        android:hint="@string/progress"
                        android:layout_width="0dp"
                        android:id="@+id/edtProgress"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:inputType="number"
                        tools:ignore="Autofill" />
                    <Button
                        android:onClick="onClick"
                        android:textSize="10sp"
                        android:textAllCaps="false"
                        android:text="@string/set_progress"
                        android:id="@+id/btnProgress"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        tools:ignore="SmallSp" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>